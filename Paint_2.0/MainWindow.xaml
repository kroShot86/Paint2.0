<Window x:Class="Paint_2._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Paint_2._0"
        mc:Ignorable="d"
        Title="MainWindow" Height="850" Width="1500" KeyDown="Window_KeyDown">
    <Grid Background="#808080">
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="58*"/>
            <RowDefinition Height="351*"/>
        </Grid.RowDefinitions>
        <Canvas x:Name="Miro" Grid.Row="2" Grid.Column="0" Background="White" MouseDown="Canvas_MouseDown" MouseUp="Canvas_MouseUp" MouseMove="Canvas_MouseMove" Margin="0,2,0,0"/>
        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="83*"/>
                <ColumnDefinition Width="73*"/>
                <ColumnDefinition Width="76*"/>
                <ColumnDefinition Width="457*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Row="0" Grid.Column="0" Content="Файл" Click="Menu_Click" FontSize="20" Padding="1" FontStyle="Italic" Background="{x:Null}">
                <Button.ContextMenu>
                    <ContextMenu>
                        <MenuItem x:Name="New" Header="Новый" Background="White" FontSize="14" Padding="3"/>
                        <MenuItem x:Name="Open" Header="Открыть" Background="White" FontSize="14" Padding="3"/>
                        <MenuItem x:Name="Save" Header="Сохранить" Background="White" FontSize="14" Padding="3"/>
                        <MenuItem x:Name="Exit" Header="Выход" Background="White" FontSize="14" Padding="3" Click="Exit_Click"/>
                    </ContextMenu>
                </Button.ContextMenu>
            </Button>

            <Button Grid.Row="0" Grid.Column="1" Content="Правка" Click="Menu_Click" FontSize="20" Padding="1" FontStyle="Italic" Background="{x:Null}">
                <Button.ContextMenu>
                    <ContextMenu>
                        <MenuItem x:Name="Otmena" Header="Отменить действие" Background="White" FontSize="14" Padding="3" Click="Otmena_Click"/>
                        <MenuItem Header="Вырезать" Background="White" FontSize="14" Padding="3"/>
                        <MenuItem Header="Копировать" Background="White" FontSize="14" Padding="3"/>
                        <MenuItem Header="Вставить" Background="White" FontSize="14" Padding="3"/>
                    </ContextMenu>
                </Button.ContextMenu>
            </Button>

            <Button Grid.Row="0" Grid.Column="2" Content="Вид" Click="Menu_Click" FontSize="20" Padding="1" FontStyle="Italic" Background="{x:Null}">
                <Button.ContextMenu>
                    <ContextMenu>
                        <MenuItem x:Name="Setka" Header="Сетка" Background="White" FontSize="14" Padding="3" Click="Setka_Click"/>
                        <MenuItem x:Name="Str_sost" Header="Строка состояния" Background="White" FontSize="14" Padding="3" Click="Str_sost_Click"/>
                    </ContextMenu>
                </Button.ContextMenu>
            </Button>
            <Border BorderBrush="Black" BorderThickness="1" d:IsLocked="True"/>
            <Border BorderBrush="Black" BorderThickness="1" Grid.Column="1" d:IsLocked="True"/>
            <Border BorderBrush="Black" BorderThickness="1" Grid.Column="2" d:IsLocked="True"/>
            <Slider x:Name="Tolshina" Grid.Row="0" Grid.Column="3" HorizontalAlignment="Left" Margin="8,0,0,0" Width="521" Minimum="1" Maximum="50" SmallChange="0"/>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="31*"/>
                <RowDefinition Height="27*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="97*"/>
                <ColumnDefinition Width="102*"/>
                <ColumnDefinition Width="124*"/>
                <ColumnDefinition Width="182*"/>
                <ColumnDefinition Width="295*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Row="1" Grid.Column="0"  Content="Выделение" FontSize="20" Background="{x:Null}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF1BEF62" />
            <Label Grid.Row="1" Grid.Column="1"  Content="Изображение" FontSize="20" Background="{x:Null}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF1BEF62"/>
            <Label Grid.Row="1" Grid.Column="2"  Content="Инструменты" FontSize="20" Background="{x:Null}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF1BEF62"/>
            <Label Grid.Row="1" Grid.Column="3"  Content="Фигуры" FontSize="20" Background="{x:Null}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF1BEF62"/>
            <Label Grid.Row="1" Grid.Column="4"  Content="Цвета" FontSize="20" Background="{x:Null}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF1BEF62"/>

            <Button Grid.Row="0" Grid.Column="0" Margin="25,5,25,5" Background="#FFC8FFFF"/>

            <Grid Grid.Row="0" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Row="0" Grid.Column="0" Content="Обрезка" Background="{x:Null}" FontSize="20"/>
                <Button Grid.Row="0" Grid.Column="1" Content="Поворот" Background="{x:Null}" FontSize="20"/>

            </Grid>

            <Grid Grid.Row="0" Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="15*"/>
                    <RowDefinition Height="16*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="51*"/>
                    <ColumnDefinition Width="51*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="Karandash" Grid.Row="0" Grid.Column="0" Click="Karandash_Click" BorderBrush="{x:Null}" Foreground="{x:Null}">
                    <Button.Background>
                        <ImageBrush ImageSource="/карандаш.png" Stretch="Uniform" TileMode="None"/>
                    </Button.Background>
                </Button>
                <Button x:Name="Zalivka" Grid.Row="0" Grid.Column="1" Click="Zalivka_Click">
                    <Button.Background>
                        <ImageBrush ImageSource="/заливка.png" Stretch="Uniform"/>
                    </Button.Background>
                </Button>
                <Button x:Name="Lastik" Grid.Row="1" Grid.Column="0" Click="Lastik_Click">
                    <Button.Background>
                        <ImageBrush ImageSource="/ластик.png" Stretch="Uniform"/>
                    </Button.Background>
                </Button>
                <Button x:Name="Text" Grid.Row="1" Grid.Column="1"  Content="Текст"  Background="{x:Null}" FontSize="20" BorderBrush="{x:Null}" Click="Text_Click"/>

                <Border BorderBrush="Black" BorderThickness="1" d:IsLocked="True"/>
                <Border BorderBrush="Black" BorderThickness="1" Grid.Row="1" d:IsLocked="True"/>
                <Border BorderBrush="Black" BorderThickness="1" Grid.Column="1" d:IsLocked="True"/>
                <Border BorderBrush="Black" BorderThickness="1" Grid.Column="1" Grid.Row="1" d:IsLocked="True"/>
            </Grid>

            <Grid Grid.Row="0" Grid.Column="4">
                <Border BorderBrush="Black" BorderThickness="1" d:IsLocked="True"/>
                <Border BorderBrush="Black" BorderThickness="1" Grid.Row="1" d:IsLocked="True"/>
                <Border BorderBrush="Black" BorderThickness="1" Grid.Column="1" d:IsLocked="True"/>
                <Border BorderBrush="Black" BorderThickness="1" Grid.Column="1" Grid.Row="1" d:IsLocked="True"/>
                <Border BorderBrush="Black" BorderThickness="1" Grid.Column="2" d:IsLocked="True"/>
                <Border BorderBrush="Black" BorderThickness="1" Grid.Column="2" Grid.Row="1" d:IsLocked="True"/>
                <Border BorderBrush="Black" BorderThickness="1" Grid.Column="3" d:IsLocked="True"/>
                <Border BorderBrush="Black" BorderThickness="1" Grid.Column="3" Grid.Row="1" d:IsLocked="True"/>
                <Border BorderBrush="Black" BorderThickness="1" Grid.Column="4" d:IsLocked="True"/>

                <Button x:Name="Red" Grid.Row="0" Grid.Column="0" Margin="15,3,15,3" Background="Red" Click="Red_Click"/>
                <Button x:Name="Blue" Grid.Row="0" Grid.Column="1" Margin="15,3,15,3" Background="Blue" Click="Blue_Click"/>
                <Button x:Name="Yellow"  Grid.Row="0" Grid.Column="2" Margin="15,3,15,3" Background="Yellow" Click="Yellow_Click"/>
                <Button x:Name="Green"  Grid.Row="0" Grid.Column="3" Margin="15,3,15,3" Background="Green" Click="Green_Click"/>
                <Button x:Name="Orange"  Grid.Row="0" Grid.Column="4" Margin="15,3,15,3" Background="Orange" Click="Orange_Click"/>
                <Button x:Name="Purple"  Grid.Row="1" Grid.Column="0" Margin="15,3,15,3" Background="Purple" Click="Purple_Click"/>
                <Button x:Name="Black"  Grid.Row="1" Grid.Column="1" Margin="15,3,15,3" Background="Black" Click="Black_Click"/>
                <Button x:Name="White"  Grid.Row="1" Grid.Column="2" Margin="15,3,15,3" Background="White" Click="White_Click"/>
                <Button x:Name="Gray"  Grid.Row="1" Grid.Column="3" Margin="15,3,15,3" Background="Gray" Click="Gray_Click"/>
                <Button x:Name="Brown"  Grid.Row="1" Grid.Column="4" Margin="15,3,15,3" Background="Brown" Click="Brown_Click"/>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>


            </Grid>

            <Grid Grid.Row="0" Grid.Column="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="15*"/>
                    <RowDefinition Height="16*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="51*"/>
                    <ColumnDefinition Width="51*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="Liniy" Grid.Row="0" Grid.Column="0" Content="Линия" Background="{x:Null}" FontSize="20" BorderBrush="{x:Null}" Click="Liniy_Click"/>
                <Button x:Name="Pryam" Grid.Row="0" Grid.Column="1" Content="Прямоугольник" Background="{x:Null}" FontSize="20" BorderBrush="{x:Null}" Click="Pryam_Click"/>
                <Button x:Name="Eleps" Grid.Row="1" Grid.Column="0" Content="Эллепс" Background="{x:Null}" FontSize="20" BorderBrush="{x:Null}" Click="Eleps_Click"/>
                <Button x:Name="Treug" Grid.Row="1" Grid.Column="1" Content="Треугольник" Background="{x:Null}" FontSize="20" BorderBrush="{x:Null}" Click="Treug_Click"/>
                <Border BorderBrush="Black" BorderThickness="1" d:IsLocked="True"/>
                <Border BorderBrush="Black" BorderThickness="1" Grid.Row="1" d:IsLocked="True"/>
                <Border BorderBrush="Black" BorderThickness="1" Grid.Column="1" d:IsLocked="True"/>
                <Border BorderBrush="Black" BorderThickness="1" Grid.Column="1" Grid.Row="1" d:IsLocked="True"/>
            </Grid>

            <Border BorderBrush="Black" BorderThickness="1" d:IsLocked="True"/>
            <Border BorderBrush="Black" BorderThickness="1" Grid.Row="1" d:IsLocked="True"/>
            <Border BorderBrush="Black" BorderThickness="1" Grid.Column="1" d:IsLocked="True"/>
            <Border BorderBrush="Black" BorderThickness="1" Grid.Column="1" Grid.Row="1" d:IsLocked="True"/>
            <Border BorderBrush="Black" BorderThickness="1" Grid.Column="2" d:IsLocked="True"/>
            <Border BorderBrush="Black" BorderThickness="1" Grid.Column="2" Grid.Row="1" d:IsLocked="True"/>
            <Border BorderBrush="Black" BorderThickness="1" Grid.Column="3" d:IsLocked="True"/>
            <Border BorderBrush="Black" BorderThickness="1" Grid.Column="3" Grid.Row="1" d:IsLocked="True"/>
            <Border BorderBrush="Black" BorderThickness="1" Grid.Column="4" d:IsLocked="True"/>
            <Border BorderBrush="Black" BorderThickness="1" d:IsLocked="True"/>

            <Border BorderBrush="Black" BorderThickness="1" Grid.Column="4" Grid.Row="1" d:IsLocked="True"/>
            <Border BorderBrush="Black" BorderThickness="1" Grid.Column="3" d:IsLocked="True"/>

        </Grid>

    </Grid>
</Window>
